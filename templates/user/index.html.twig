{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}
{% block  breadcrumb %}

    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">Utilisateurs</a>
        </li>
    </ul>
{% endblock %}

    {% block QuickLink1 %}

        <a class="btn btn-white btn-sm" href="{{ path('user_new') }}">
            <i class="os-icon os-icon-delivery-box-2"></i>
            <span>Cr√©e un nouveau utilisateur</span>
        </a>

    {% endblock %}
{% block body %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Liste des utilisateurs</h1>


    <div class="table-responsive">
        <table class="table table-bordered table-lg table-v2 table-striped">
            <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Email
                </th>
                <th>
                    Roles
                </th>
                <th>
                    actions
                </th>
            </tr>
            </thead>
            <tbody>

            {% for user in users %}
                <tr>
                    <td>
                        {{ user.id }}
                    </td>
                    {#
                    <td>
                        <img alt="" src="{{ asset('img/flags-icons/ca.png') }}" width="25px">
                    </td>
                    #}
                    <td class="text-right">
                        {{ user.email }}
                    </td>
                    <td>
                        {{ user.roles ? user.roles|json_encode : '' }}
                    </td>
                    {#
                    <td class="text-center">
                        <div class="status-pill yellow" data-title="Pending" data-toggle="tooltip"></div>
                    </td>
                    #}
                    <td class="row-actions">
                        <a href="{{ path('user_edit', {'id': user.id}) }}">
                            <i class="os-icon os-icon-ui-49"></i>
                        </a>
                        <a href="{{ path('user_show', {'id': user.id}) }}">
                            <i class="os-icon os-icon-grid-10"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}

            </tbody>
        </table>
    </div>


