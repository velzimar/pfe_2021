                            'attr': {'class': 'form-control'   }
                        }) }}
                    </div>
                </fieldset>

                <div class="form-buttons-w">
                    <div class="row">
                        <div class="col-auto mr-auto">
                            <button class="btn btn-primary disabled" type="submit"> Mettre à jour</button>
                            <button class="btn" type="reset">Reset</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>

{% endblock %}

