{% extends 'base.html.twig' %}

{% block title %}categories index{% endblock %}

{% block  breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('selectUserForCategory', {'action': 'new'}) }}">Selectionner un utilisateur</a>
        </li>
        <li class="breadcrumb-item">
