{% block body %}
    <div class="element-wrapper">
        <h6 class="element-header">
            Les commandes des deals
        </h6>
        <div class="element-box">
            <div class="order-box">
                <div class="order-items-table">
                    <div class="table-responsive">
                        <table id="dataTable" class="table table-lightborder">
                            <thead id="head">
                            <tr>
                                <th>
                                    Client
                                </th>
                                <th>
                                    Deal
                                </th>
                                <th>
                                    Code
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for deal in deals %}
                                <tr>
                                    <td>
                                        <div class="product-name">
                                            {{ deal.user.email }}
                                        </div>
                                    </td>
                                    <td>
                                        <div class="product-name">
                                            <a class="product-remove-btn"
                                               href="{{ path('myDeals_show', {'id': deal.deal.id}) }}">
                                                <div class="product-name">
                                                    {{ deal.deal.id }}
                                                </div>
                                            </a>
                                        </div>
                                    </td>

                                    <td>
                                        <div class="product-name">
                                            {{ deal.code }}
                                        </div>
                                    </td>


                                    <td>
                                        <div class="product-name">
                                            {% if deal.isUsed %}

                                <div class="product-name">
                                    Utiliser
                                </div>
                                            {% else %}
                                                <a class="btn btn-dark" href="{{ path('setIsUsed_orderDeal', {'id': deal.id}) }}">Confirmer</a>
                                                {% endif %}
                                        </div>
                                    </td>

                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
