{% extends 'base.html.twig' %}

{% block title %}Mes deals{% endblock %}

{% block  breadcrumb %}

    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Liste des commandes</a>
    </ul>
{% endblock %}

