{% extends 'base.html.twig' %}

{% block title %}Service{% endblock %}

{% block  breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('service_index_user', {'userId': userId }) }}">Services</a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">Détails</a>
        </li>
    </ul>
{% endblock %}

{% block QuickLink1 %}
    {{ include('service/_quickLinks.html.twig') }}
    {{ include('service/_delete_form.html.twig') }}
{% endblock %}
{% block body %}

    <div class="col-sm-12">
        <div class="element-wrapper">
            <h6 class="element-header">
                Les services de l'utilisateur {{ userId.nom }}
            </h6>
            <div class="element-box">
                <h5 class="form-header">
                    Détails du service
                </h5>
                <div class="form-desc">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ service.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ service.nom }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ service.description }}</td>
                        </tr>
                        <tr>
                            <th>Prix</th>
                            <td>{{ service.prix }}</td>
                        </tr>
                        <tr>
                            <th>Catégorie</th>
                            <td>{{ service.category }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>
                                {% if service.filename %}
                                    <img alt="" src= "{{ vich_uploader_asset(service, 'imageFile') }}" >
                                {% else %}
                                    <img src="{{ asset('/img/bigicon1.png') }}" alt="card-img-top" style="width: 100%; height: auto">
                                {% endif %}
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>

{% endblock %}