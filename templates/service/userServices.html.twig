                                        </div>

                                        <div class="col">
                                            <a class="product-remove-btn"
                                               href="{{ path('admin_service_calendar',{'id':service.id, 'user':service.business}) }}">
                                                Réservation
                                            </a>
                                        </div>

                                    </td>
                                    <td>
                                        <div class="row row-actions" style="border-top:none ;border-bottom:none">
                                            <div class="col">
                                                <a class="product-remove-btn"
                                                   href="{{ path('service_show', {'id': service.id, 'userId':userId}) }}">
                                                    <div class="os-icon os-icon-grid-10"></div>
                                                </a>
                                            </div>
                                            <div class="col">
                                                <a class="product-remove-btn"
                                                   href="{{ path('service_edit', {'id': service.id, 'userId':userId}) }}">
                                                    <div class="os-icon os-icon-ui-49"></div>
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# <a href="{{ path('service_new') }}">Create new</a> #}
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            // Setup - add a text input to each footer cell
            $('#dataTable thead tr').clone(true).appendTo('#dataTable thead');
            $('#dataTable thead tr:eq(1) th').each(function (i) {

                var title = $(this).text();
                if (title.search("Cat") !== -1 || title.search("Info") !== -1  || title.search("Pri") !== -1) {
                    $(this).html('<input class="form-control" type="text" />');

                    $('input', this).on('keyup change', function () {
                        if (table.column(i).search() !== this.value) {
                            table
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                } else {
                    $(this).html('<input type="text" hidden/>');

                }

            });

            var table = $('#dataTable').DataTable({
                orderCellsTop: true,
                fixedHeader: true,
                "dom": '<"top"l>rt<"bottom"ip><"clear">',
                language: {
                    url: '//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json'
                }
            });

        });
    </script>
{% endblock %}
