                            </tr>
                            </thead>
                            <tbody>
                            {% for service in services %}
                                <tr>
                                    <td>
                                        {% if service.filename %}
                                            <div class="product-image"
                                                 style="background-image: url({{ vich_uploader_asset(service, 'imageFile') }})"></div>
                                        {% else %}
                                            <div class="product-image"
                                                 style="background-image: url({{ asset('/img/bigicon1.png') }})"></div>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="product-name">
                                            {{ service.nom }}
                                        </div>
                                    </td>
                                    <td>
                                        <a class="product-remove-btn" href="{{ path('service_category_show', {'id': service.category.id,'userId': userId}) }}">
                                            {{ service.category }}
                                        </a>
                                    </td>
                                    <td class="text-md-left">
