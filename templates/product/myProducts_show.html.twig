{% extends 'base.html.twig' %}

{% block title %}Product{% endblock %}
{% block  breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">Selectionner un utilisateur</a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">Liste</a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">Show</a>
        </li>
    </ul>
{% endblock %}
{% block body %}
    <h1>Product</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ product.id }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ product.nom }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ product.description }}</td>
        </tr>
        <tr>
            <th>Prix</th>
            <td>{{ product.prix }}</td>
        </tr>
        <tr>
            <th>Qtt</th>
            <td>{{ product.qtt }}</td>
        </tr>
        <tr>
            <th>Cat√©gorie</th>
            <td>{{ product.category }}</td>
        </tr>
        <tr>
            <th>Image</th>
            <td>
                {% if product.filename %}
                    <img alt="" src= "{{ vich_uploader_asset(product, 'imageFile') }}" >
                {% else %}
                    <img src="{{ asset('/img/bigicon1.png') }}" alt="card-img-top" style="width: 100%; height: auto">
                {% endif %}
            </td>
        </tr>
        </tbody>
    </table>

    <form method="post" action="{{ path('myProducts_delete', {'id': product.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
        <button class="btn">Delete</button>
    </form>
{% endblock %}
