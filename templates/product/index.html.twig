    <div class="element-wrapper">
        <h6 class="element-header">
            Mes produits
        </h6>
        <div class="element-box">
            <h5 class="form-header">
            </h5>
            <div class="form-desc">
            </div>
            <div class="order-box">
                <div class="order-items-table">
                    <div class="table-responsive">
                        <table id="dataTable" class="table table-lightborder">
                            <thead>
                            <tr>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Info
                                </th>
                                <th>
                                    Catégorie
                                </th>
                                <th>
                                    Quantité
                                </th>
                                <th>
                                    Prix (dt)
                                </th>
                                <th>
                                    Actions
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for product in products %}
                                <tr>
                                    <td>
                                        {% if product.filename %}
                                            <div class="product-image"
                                                 style="background-image: url({{ vich_uploader_asset(product, 'imageFile') }})"></div>
                                        {% else %}
                                            <div class="product-image"
                                                 style="background-image: url({{ asset('/img/bigicon1.png') }})"></div>
                                        {% endif %}
                                    </td>
                                    <td>
                                        <div class="product-name">
                                            {{ product.nom }}
                                        </div>
                                    </td>
                                    <td>
                                        <a class="product-remove-btn"
                                           href="{{ path('myProductCategories_show', {'id':product.category.id}) }}">
                                            {{ product.category }}
                                        </a>
                                    </td>
                                    <td class="text-md-left">
                                        <div class="product-price">
                                            {{ product.qtt }}
                                        </div>
                                    </td>
                                    <td class="text-md-left">
                                        <div class="product-price">
                                            {{ product.prix }}
                                        </div>
                                    </td>
                                    <td>
                                        <div class="row row-actions" style="border-top:none ;border-bottom:none">
                                            <div class="col">
                                                <a class="product-remove-btn"
                                                   href="{{ path('myProducts_show', {'id': product.id}) }}">
                                                    <div class="os-icon os-icon-grid-10"></div>
                                                </a>
                                            </div>
                                            <div class="col">
                                                <a class="product-remove-btn"
                                                   href="{{ path('myProducts_edit', {'id': product.id}) }}">
                                                    <div class="os-icon os-icon-ui-49"></div>
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
