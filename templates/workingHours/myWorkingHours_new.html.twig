{% extends 'base.html.twig' %}

{% block title %}New Service{% endblock %}
{% block  breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        <li class="breadcrumb-item">
            <a href="{{ path('myWorkingHours_new') }}">Mes horaires</a>
        </li>
    </ul>
{% endblock %}

{% block body %}
    <div class="col-sm-12">
        <div class="element-wrapper">
            <div class="element-box">
                <h5 class="form-header">
                </h5>
                <div class="form-desc">
                </div>
                {{ form_start(form) }}
                <div class="order-items-table">
                    <div class="table-responsive">
                        <table id="dataTable" class="table table-responsive-lg">
                            <thead>
                            <tr>
                                <th>
                                    Jours
                                </th>
                                <th colspan="3" style="text-align: center;">
                                    Séance 1
                                </th>
                                <th colspan="3" style="text-align: center;">
                                    Séance 2
                                </th>
                            </tr>
                            </thead>
                            <tbody>

                            <tr>
                                <td>Lundi</td>
                                <td>{{ form_widget(form.monday_S1_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.monday_S1_end) }}</td>

                                <td>{{ form_widget(form.monday_S2_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.monday_S2_end) }}</td>
                            </tr>

                            <tr>
                                <td>Mardi</td>
                                <td>{{ form_widget(form.tuesday_S1_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.tuesday_S1_end) }}</td>
                                <td>{{ form_widget(form.tuesday_S2_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.tuesday_S2_end) }}</td>
                            </tr>
                            <tr>
                                <td>Mercredi</td>
                                <td>{{ form_widget(form.wednesday_S1_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.wednesday_S1_end) }}</td>
                                <td>{{ form_widget(form.wednesday_S2_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.wednesday_S2_end) }}</td>
                            </tr>
                            <tr>
                                <td>Jeudi</td>
                                <td>{{ form_widget(form.thursday_S1_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.thursday_S1_end) }}</td>
                                <td>{{ form_widget(form.thursday_S2_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.thursday_S2_end) }}</td>
                            </tr>
                            <tr>
                                <td>Vendredi</td>
                                <td>{{ form_widget(form.friday_S1_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.friday_S1_end) }}</td>
                                <td>{{ form_widget(form.friday_S2_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.friday_S2_end) }}</td>
                            </tr>
                            <tr>
                                <td>Samedi</td>
                                <td>{{ form_widget(form.saturday_S1_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.saturday_S1_end) }}</td>
                                <td>{{ form_widget(form.saturday_S2_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.saturday_S2_end) }}</td>
                            </tr>
                            <tr>
                                <td>Dimanche</td>
                                <td>{{ form_widget(form.sunday_S1_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.sunday_S1_end) }}</td>
                                <td>{{ form_widget(form.sunday_S2_start) }}</td><td>à</td>
                                <td>{{ form_widget(form.sunday_S2_end) }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                {#
                <div class="row">
                    <div class="col-sm-12">
                            {{ form_widget(form.isActive) }}
                    </div>
                </div>
                #}

                <div class="form-buttons-w">
                    <div class="row">
                        <div class="col-auto mr-auto">
                            <button class="btn btn-primary " type="submit"> go</button>
                        </div>
                        <div class="col-auto">
                            <button class="btn" type="reset">Annuler</button>
                        </div>
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}

    <script>
        $("[role='presentation']").addClass("table table-borderless")
        $("[role='presentation']").children("thead").remove()
    </script>
{% endblock %}