{% extends 'base.html.twig' %}

{% block title %}DealCategory{% endblock %}
{% block  breadcrumb %}

    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('userDealCategories_index', {'userId': userId}) }}">Catégories</a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">Détail</a>
        </li>
    </ul>
{% endblock %}


{% block QuickLink1 %}
    {{ include('deal_category/_quickLinks.html.twig') }}

    {{ include('deal_category/_delete_form.html.twig', {'userId': userId}) }}
{% endblock %}

{% block body %}

    <div class="col-sm-12">
        <div class="element-wrapper">
            <h6 class="element-header">
                Les catégories de l'utilisateur {{ userId.nom }}
            </h6>
            <div class="element-box">
                <h5 class="form-header">
                    Détails du catégorie
                </h5>
                <div class="form-desc">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
