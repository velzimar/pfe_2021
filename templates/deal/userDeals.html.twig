{% extends 'base.html.twig' %}

{% block title %}Deals{% endblock %}

{% block  breadcrumb %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('selectUserDeal', {'action': 'index_user'}) }}">Selectionner un utilisateur</a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">Deals</a>
        </li>
    </ul>
{% endblock %}


{% block QuickLink1 %}
    {{ include('deal/_quickLinks.html.twig') }}
{% endblock %}
{% block body %}
    <div class="element-wrapper">
        <div class="element-box">
            <div class="order-box">
                <div class="order-details-box">
                    <div class="order-main-info">
                        <a href="{{ path('user_edit', {'id': userId.id}) }}">
                            <span>Nom & prenom</span><strong>{{ userId.nom }} {{ userId.prenom }}</strong>
                        </a>
                    </div>
                    <div class="order-sub-info">
                        <a href="{{ path('user_edit', {'id': userId.id}) }}">
                            <span>Identifiant</span><strong>#{{ userId.id }}</strong>
                        </a>
                    </div>
                </div>
                <div class="table-responsive">
                    <table id="dataTable" style="width: 100%;" class="table table-striped table-lightfont">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Prix</th>
                            <th>Qtt</th>
                            <th>Cat√©gorie</th>
                            <th>actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for deal in deals %}
                            <tr>
                                <td>{{ deal.id }}</td>
                                <td>{{ deal.nom }}</td>
                                <td>{{ deal.prix }}</td>
                                <td>{{ deal.qtt }}</td>
                                <td>{{ deal.category }}</td>
                                <td>

                                    <a href="{{ path('deal_show', {'id': deal.id, 'userId':userId}) }}">
                                        <i class="os-icon os-icon-grid-10"></i>
                                    </a>
                                    <a href="{{ path('deal_edit', {'id': deal.id, 'userId':userId}) }}">
                                        <i class="os-icon os-icon-ui-49"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/French.json'
                }
            });
        });
    </script>
{% endblock %}
