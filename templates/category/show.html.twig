{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}
{% block  breadcrumb %}

    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="#">Home</a>
        </li>
        <li class="breadcrumb-item">
            <a href="{{ path('category_index') }}">Catégorie</a>
        </li>
        <li class="breadcrumb-item">
            <a href="#">Détails</a>
        </li>
    </ul>
{% endblock %}

{% block QuickLink1 %}
    {{ include('category/_quickLinks.html.twig') }}
    <a class="btn btn-white btn-sm" href="{{ path('category_edit', {'id': category.id}) }}"><i
                class="os-icon os-icon-delivery-box-2"></i>
        <span>Modifier cette catégorie</span>
    </a>
    {{ include('category/_delete_form.html.twig') }}


{% endblock %}

{% block body %}

    <div class="col-sm-12">
        <div class="element-wrapper">
            <h6 class="element-header">
                Les catégories des affaires
            </h6>
            <div class="element-box">
                <h5 class="form-header">
                    Détails du catégorie
                </h5>
                <div class="form-desc">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ category.id }}</td>
                        </tr>
                        <tr>
                            <th>Nom</th>
                            <td>{{ category.nom }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ category.description }}</td>
                        </tr>
                        </tbody>
                    </table>
                </div>


            </div>
        </div>
    </div>

{% endblock %}
